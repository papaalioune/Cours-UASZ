<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoursUASZ2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/uasz</item>
        <item name="colorPrimaryVariant">@color/uasz</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Pour ne pas avoir l'action bar. -->
    <style name="Theme.CoursUASZ2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Style du calendrier. -->
    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/uasz</item>
    </style>
    <!-- /Style du calendrier. -->

    <!-- Styles des emploi du temps. -->
    <style name="CelluleEmploiDuTemps" >
        <item name="android:text"></item>
        <item name="android:layout_height">@dimen/dimen40</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginRight">@dimen/dimen1</item>
        <item name="android:layout_marginBottom">@dimen/dimen1</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EnTeteEmploiDuTemps" >
        <item name="android:layout_height">@dimen/dimen20</item>
        <item name="android:background">#dcdcdc</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen10</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dimen1</item>
        <item name="android:layout_marginBottom">@dimen/dimen1</item>
        <item name="android:layout_marginRight">@dimen/dimen1</item>
    </style>

    <style name="ColonneHeuresEmploiDuTemps" >
        <item name="android:layout_height">@dimen/dimen40</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/dimen1</item>
        <item name="android:layout_marginRight">@dimen/dimen1</item>
        <item name="android:layout_marginLeft">@dimen/dimen1</item>
        <item name="android:background">#dcdcdc</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LignesEmploiDuTemps" >
        <item name="android:layout_height">@dimen/dimen40</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!-- /Styles des emploi du temps. -->
</resources>